%article.comment.panel.panel-default
  %header.panel-heading.meta
    = avatar_tag comment.user    
    = link_to "\##{comment.id}", class: 'comment-bookmark' do
      %span.glyphicon.glyphicon-bookmark(aria-hidden="true")
      = last_comment_meta_str(comment)
    

    - if current_user == comment.post.user
      = link_to ban_post_comment_path(post_id: comment.post.id, id: comment.id), method: :patch, class: 'btn btn-danger btn-xs ban' do
        %span.glyphicon.glyphicon-eye-close(aria-hidden="true")
        ban
       
  %p.panel-body= comment.body
